<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fastre">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FasTre"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.authentication.ForgotPasswordActivity" />
        <activity android:name=".ui.news.BookmarkedNewsActivity" />
        <activity android:name=".ui.setting.AboutUsActivity" />
        <activity android:name=".ui.news.NewsDetailActivity" />
        <activity android:name=".ui.splash.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.authentication.AuthenticationActivity" />
        <activity android:name=".ui.main.MainActivity" />
    </application>

</manifest>